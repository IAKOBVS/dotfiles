{
    "diagnostic.displayByAle": true,
	"clangd.path": "/usr/bin/clangd",
	"clangd.fallbackFlags": [
		"-Wall",
		"-Wextra",
		"-Wuninitialized",
		"-Wunused-variable",
		"-Wshadow",
		"-Warray-bounds",
		"-Wnull-dereference",
		"-Wformat"
	],
    "clangd.arguments": [
        "--clang-tidy"
    ],
	"languageserver": {
		"perlnavigator": {
			"command": "perlnavigator",
			"args": [
				"--stdio"
			],
			"filetypes": ["perl"]
		},
		"perlpls": {
			"command": "/usr/bin/site_perl/pls",
			"filetypes": ["perl"]
		},
        "awk": {
            "command": "awk-language-server",
            "filetypes": ["awk"]
        }
	},
	"codeLens.enable": true,
    "suggest.snippetsSupport": true,
    "bashIde.shellcheckPath": "shellcheck",
    "bashIde.enableSourceErrorDiagnostics": true
}
