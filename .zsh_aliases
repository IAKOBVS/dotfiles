#!/bin/sh
alias \
	poweroff='sync && systemctl poweroff' \
	reboot='systemctl reboot'

alias \
	par='paru --needed --skipreview -S' \
	pars='paru --needed --skipreview -Syu' \
	paruq='paru -Q | fzf' \
	pacman='sudo pacman' \
	systemctl='sudo systemctl' \
	sv='sudo $EDITOR' \
	cfg='/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME' \
	cu='cfg add $HOME/.local/bin/scripts && cfg commit -a -m new && cfg push --force' \
	cpl='cfg --reset hard && cfg pull'

# cd
alias \
	v='. v' \
	vs='cd $HOME/.local/src/st && $EDITOR config.h' \
	sr='cd $HOME/.local/bin/scripts' \
	dw='cd $HOME/.local/src/dwm' \
	vd='cd $HOME/.local/src/dwm && $EDITOR config.h' \
	vs='cd $HOME/.local/src/st && $EDITOR config.h' \
	vdm='cd $HOME/.local/src/dmenu && $EDITOR config.h' \
	vdw='cd $HOME/.local/src/dwmblocks && $EDITOR blocks.h' \
	vsl='cd $HOME/.local/src/slstatus && $EDITOR config.h' \
	dt='cd /tmp' \
	co='cd $HOME/.config && ls' \
	sk='cd $HOME/shared-files'\
	tor='lfcd $HOME/Downloads/torrent' \
	cl='cd $HOME/.local/src' \
	cdd='cd $HOME/Downloads' \
	cs='cd $HOME/.local/share' \
	cla='cd $HOME/Documents/latex'

# lf
alias \
	rec='lfcd ~/Videos/Recordings' \
	vi='lfcd ~/Videos'

# vim
alias \
	xi='$EDITOR $HOME/.xinitrc' \
	vp='$EDITOR $HOME/.config/picom.conf' \
	vvim='cd $HOME/.$EDITOR__; $EDITOR $HOME/.$EDITOR__/default.vim' \
	vv='$EDITOR config.h' \
	vb='$EDITOR blocks.h' \
	zs='$EDITOR $HOME/.zshrc' \
	va='$EDITOR $HOME/.zsh_aliases' \
	vap='$EDITOR $HOME/.local/share/alias/aliases-laptop' \
	al='$EDITOR $HOME/aliases/scripts' \
	vas='$EDITOR $HOME/.local/share/alias/sites' \
	vac='$EDITOR $HOME/.local/share/alias/clipboard' \
	th='$EDITOR $HOME/.local/share/theme/colors.h' \
	vsr='$EDITOR $HOME/.local/share/alias/scripts' \
	vlf='$EDITOR $HOME/.lfrc' \
	fin='. fin'

# shorten 
alias \
	z='zathura' \
	g='git' \
	zr='zaread' \
	pv='pavucontrol' \
	i='sxiv' \
	pm='pulsemixer' \
	ht='htop' \
	sht='sudo htop' \
	sme='sudo make install' \
	ki='killall' \
	ksl='killall slstatus ; slstatus &' \
	l='lfcd' \
	pq='paru -Q | fzf' \
	sof='du -h'

# github
alias \
	fu="git commit -a -m 'newest' && git push origin" \
	gps='git commit -a && git push origin' \
	fp='git fetch --all && git reset --hard origin/master' \
	gr='git reset --hard HEAD && git pull' \
	gpl='git pull'

# verbosity
alias \
	cp='cp -iv' \
	mv='mv -iv' \
	rm='rm -vI' \
	bc='bc -ql' \
	mkd='mkdir -pv' \
	yt='yt-dlp --embed-metadata -i' \
	yta='yt -x -f bestaudio/bestub'

# colorize 
alias \
	ls='ls -hN --color=auto --group-directories-first' \
	grep='grep --color=auto' \
	diff='diff --color=auto' \
	ccat='highlight --out-format=ansi' \
	ip='ip -color=auto'

alias \
	sen='watch -n1 "tempnfan ; echo '' ; nvidia-smi"' \
	slt='killall slstatus && nohup slstatus > /dev/null 2>&1 &' \
	dwt='killall dwmblocks && nohup dwmblocks > /dev/null 2>&1 &' \
	sf='$EDITOR /etc/fan2go/fan2go.yaml' \
	nv='nvtop'

alias vmpv='cd $HOME/.config/mpv && v mpv.conf'

alias rs='res4thum'
alias dfh='df -h | grep -v -e snap -e boot -e udev -e /run/'
alias update-grub='sudo grub-mkconfig -o /boot/grub/grub.cfg'

alias fs='. fs'
