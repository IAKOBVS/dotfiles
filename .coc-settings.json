{
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextCurrentLineOnly": false,
	"clangd.fallbackFlags": [
		"-Wall",
		"-Wextra",
		"-Wuninitialized",
		"-Wunused-variable",
		"-Wshadow",
		"-Warray-bounds",
		"-Wnull-dereference",
		"-Wformat",
		"--analyze"
	],
	"clangd.path": "/usr/bin/clangd",
	"clangd.arguments": [
		"--clang-tidy"
	],
	"languageserver": {
		"perlnavigator": {
			"command": "perlnavigator",
			"args": [
				"--stdio"
			],
			"filetypes": ["perl"]
		},
		"perlpls": {
			"command": "/usr/bin/site_perl/pls",
			"filetypes": ["perl"]
		}
	},
	"codeLens.enable": true
}
