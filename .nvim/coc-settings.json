{
	"codeLens.enable": true,
	"clangd.path": "/usr/bin/clangd",
    "clangd.disableDiagnostics": true,
	"languageserver": {
		"perlnavigator": {
			"command": "perlnavigator",
			"args": [
				"--stdio"
			],
			"filetypes": ["perl"]
		},
		"perlpls": {
			"command": "pls",
			"filetypes": ["perl"]
		},
        "awk": {
            "command": "awk-language-server",
            "filetypes": ["awk"]
        }
	},
    "sh.commandPath": "bash-language-server",
    "prettier.useTabs": true,
    "prettier.semi": true,
    "prettier.bracketSameLine": false,
    "eslint.onIgnoredFiles": "off"
}
