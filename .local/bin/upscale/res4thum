#!/usr/bin/bash
case $1 in
	*.png);;
	*.jpg);;
	*)
		echo 'Not an image file!'
		exit 1
esac
[ -z "$1" ] && echo "Usage: res4thumbnail <image> <resolution>" && exit 0
[ -z "$(echo "$1" | grep 'png')" ] && topng "$1"
if [ -z "$2" ]; then
	height=720
	resolution='1280x720'
elif [ -z "$(echo "$2" | grep 'x')" ]; then
	case "$2" in
		'720')
			height=720;;
		'1080')
			height=1080;;
		'1440')
			height=1440;;
		'4k')
			height=2160;;
	esac
else
	resolution=$2
	height=$(echo "$resolution" | cut -d'x' -f2)
fi
img=$1
upndownscale(){ waifu2xauto "$1" "$2"
	res "$( cleanext "$1" )"'-hd.png' "$resolution"
	sq "$( cleanext "$1" )"'-hd-resized.png'
	echo "$1 has been upscaled $2x.";}
scale=$(getres "$img" | awk -v h="$height" '{print int(h/$2 + 0.99)}')
if [ 1 -ge "$scale" ]; then
	echo "'$1' need not be upscaled"
	res "$img" "$resolution"
elif [ 4 -ge "$scale" ];then
	upscale=4
	upndownscale "$img" $upscale
elif [ 16 -ge "$scale" ]; then
	upscale=16
	upndownscale "$img" $upscale
else
	upscale=64
	upndownscale "$img" $upscale
fi
