#!/usr/bin/dash
if [ -z "$1" ]; then
	echo "Usage: res4thumbnail <image>"
	exit 0
fi
upndownscale(){ 
	waifu2xauto "$1" "$2"
	res720 "$( cleanext "$1" )"'-hd.png'
	sq "$( cleanext "$1" )"'-hd-resized.png'
	echo "$1 has been upscaled $2x and set as background."
	# asbg "$1"
}
res1080(){
	res "$1" 1080
}
img=$1
scale=$( getres "$img" | awk '{print int(1080/$1 + 0.99)}' )
if [ 2 -gt "$scale" ]
then
	echo "'$1' need not be upscaled"
	res1080 "$img"
elif [ 5 -gt "$scale" ]
then
	upscale=4
	upndownscale "$img" $upscale
elif [ 17 -gt "$scale" ]
then
	upscale=16
	upndownscale "$img" $upscale
elif [ 33 -gt "$scale" ]
then
	upscale=32
	upndownscale "$img" $upscale
else
	upscale=64
	upndownscale "$img" $upscale
fi
