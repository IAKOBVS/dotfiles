#!/bin/sh
path="$(find $HOME/.local/bin/scripts $HOME/c \
	! -path '*cnlp*data*' \
	! -path '*vscode*' \
	! -path '*git*' \
	! -path '*.o' \
	! -path '*.out' \
	! -name '.' \
	-type f 2> /dev/null | fzfpreview --delimiter / --with-nth -1)"
test $path || return 1
$EDITOR $path && cd $(dirname $path) || return 1
