# Run a steam game with dmenu

gameid=$(
	# Get the names and gameids from the .acf file.
	# format of acf file:
	# "key"	"value"
	awk '
	{
		# remove quotes
		gsub(/"/, "");
		# remove spaces
		gsub(/ {1,}/, " ");
		gsub(/ /, "-");
		# Parse appid.
		if (/appid/) {
			id = $2;
		# Parse game name.
		} else if (/name/ && !/Proton/ && !/[Ss]team/) {
			name = $2;
			name = tolower(name);
			printf("%s\t%s\n", name, id);
		}
	}' /opt/Steam/steamapps/*.acf $HOME/.local/share/Steam/steamapps/*.acf |
		# Prettify the columns.
		column -t |
		# Open dmenu.
		dmenu -l 30 |
		# Output the gameid.
		awk '{print $NF}'
)

# Do nothing if no game is selected.
[ -n "$gameid" ] || exit

steam steam://rungameid/"$gameid" &

# Kill background processes
gaming-kill
# Set the nice of background processes to 19,
sudo renice 19 -p $(ps -e -o comm | awk '/dunst/ || /unclutter/ || /dwmblocks-fast/')
# Wait until steamwebhelper launches
sleep 10
# Set the nice of steamwebhelper to 19,
sudo renice 19 -p $(echo "$proc" | grep -F steamwebhelper)
