#!/bin/sh
usage='usage: ./waifu2xauto <image> <scale>'
case $1 in
	*.png|*.jpg);;
	*)
		echo $usage
		echo 'Not an image file!'
		return 1
esac
if test $2 -le 4
then
	n=0
elif test $2 -le 16
then
	n=1
elif test $2 -le 32
then
	n=2
elif test $2 -le 64
then
	n=3
else
	echo $usage
	echo 'Illegal number used! Use 1, 2, 3, 4, 16, 32, or 64 instead.'
	return 1
fi
out="${1%.*}-hd.png"
scale=4
upscaler=realesrgan-x4plus-anime
realesr() {
	realesrgan-ncnn-vulkan -f png -i "$1" -o "$out" -s "$scale" -n "$upscaler" -v
}
realesr $1
i=0
while test $i -lt $n
do
	realesr "$out"
	i=$((i=i+1))
done
