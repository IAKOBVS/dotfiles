#!/bin/sh
mkdir -p /tmp/__ram_bin__
cp -rf $(find $HOME/.local/bin -type f \
	! -path '*cache*' \
	! -path '*.git*' \
	! -path '*.gnupg*' \
	! -path '*.vscode*' \
	! -path '*.rev*' \
	! -path '*.key*' \
	! -path '*.virtualenv*' \
	! -path '*.cargo*' \
	! -path '*.o' \
	! -path '*.pass*' \
	! -path '*.png' \
	! -path '*.jpeg' \
	! -path '*.jpg' \
	! -path '*.jpg') \
	/tmp/__ram_bin__ 2> /dev/null &
__load_bin__() { cp -rf $@ /tmp/__ram_bin__ 2> /dev/null; }
__load_bin__ /usr/bin/st &
__load_bin__ /usr/bin/$EDITOR &
__load_bin__ /usr/bin/zsh &
unset __load_bin__
