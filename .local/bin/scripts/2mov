#!/bin/sh
case $1 in
	*.mp4|*.mov|*.mkv);;
	*)
		echo 'Not a .mp4, .mov, or .mkv file!'
		return 1
esac
out=${1%.*}
ffmpeg -i "$1" -vcodec mjpeg -q:v 2 -c:a pcm_s16le -f mov "$out"'.mov'

