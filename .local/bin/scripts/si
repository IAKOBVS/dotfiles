#!/bin/sh
if [ "$(uname -s)" = Linux ]; then
	du -shc -- * 2>/dev/null | sort -h | less
	exit
else
	toGb=$((1024 * 1024))
	du -s -- * 2>/dev/null |
		sort -n |
		awk -v fmt=$toGb \
			'BEGIN { total = 0 } \
		{ total += $1; \
		printf "%.1fG %s\n", $1/fmt, $2 } \
	END { printf("%.1fG total", total/fmt) }' |
		less
fi
