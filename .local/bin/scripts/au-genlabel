#!/bin/sh
PROG=/$HOME/.conda/envs/stable-ts/bin/stable-ts
$PROG $1 --language English --task transcribe -o $1.srt
sed -i 's/<font [^>]*>//g; s/<\/font>//g; s/\([A-Za-z]\)[.,-?]/\1/g' $1.srt
# align first word to start
sed -i '0,/00:00:[0-9]*,[0-9]*/{s/00:00:[0-9]*,[0-9]*/00:00:00,000/}' $1.srt
cvt-srt $1.srt
