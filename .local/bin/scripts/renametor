#!/usr/bin/perl
use strict;
use warnings;

my @old;
my @new;

my $new;
my $old;

while (glob('*')) {
	no warnings; # ignores use of \1 over $1 warning as backreference

	$old = $_;

	# brackets
	s/\[[^\]]*\]//g;

	# leading space
	s/^\.\/[[:space:]]*([^[:space:]])/\1/;

	# inside parens
	s/\([0-9]*\)//g; # (2019)
	s/\([^\)]*1080[^\)]*\)//g; # (.*1080.*)
	s/\([^\)sS]*\)//g;

	# trailing before extension
	s/[[:space:]]*(\.[0-9A-Za-z]*)$/\1/; # space
	s/\-*(\.[0-9A-Za-z]*)$/\1/; # underscore
	s/_*(\.[0-9A-Za-z]*)$/\1/; # dash

	# trailing
	s/\ *$//; # space
	s/_*$//; # underscore
	s/\-*$//; # dash

	# weird symbols
	s/_{2,}/_/g; # underscores
	s/  {2,}/ /g; # spaces
	s/-{2,}/-/g; # dashes
	s/_\-_/_/g; # _-_
	s/\.\-/_/g; # .-

	s/eason([[0-9]])/eason\ \1/g; # season2 -> season 2

	print "$_\n";
	push @old, $old;
	push @new, $_;
}

printf "\nDo you want to rename the files? (y/n)\n";
chomp($_ = <>);

if ($_ eq 'Y') {
	for my $i (0..$#old) {
		rename($old[$i], $new[$i]) or print "Unable to rename $old[$i] to $new[$i]\n";
	}
	printf "Files successfully renamed!\n";
}
